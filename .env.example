# ============================================
# CHAMPION FORGE - CONFIGURAÇÃO COMPLETA
# ============================================

# Jogo
GAME_CODE=CHAMP
GAME_NAME="Champion Forge"

# ============================================
# SERVER (.env no src/server/)
# ============================================

# Server
PORT=3001
NODE_ENV=development

# Database (MySQL do games-admin)
DATABASE_URL=mysql://user:password@localhost:3306/champion_forge

# JWT
JWT_SECRET=champion_forge_local_jwt_secret_change_me
JWT_EXPIRES_IN=7d

# Client URL (for CORS)
CLIENT_URL=http://localhost:5173

# Games Admin Integration
GAMES_ADMIN_API_URL=https://admin.mysys.shop
GAMES_ADMIN_API_KEY=your_api_key_here
GAMES_ADMIN_JWT_SECRET=your_jwt_secret_here

# OAuth 2.0 (SSO with Portal)
OAUTH_CLIENT_ID=CHAMP
OAUTH_CLIENT_SECRET=your_oauth_client_secret
OAUTH_AUTHORIZE_URL=https://mysys.shop/oauth/authorize
OAUTH_TOKEN_URL=https://mysys.shop/oauth/token
OAUTH_REDIRECT_URI=http://localhost:5173/auth/callback

# ============================================
# CLIENT (.env no src/client/)
# ============================================

# API URLs
VITE_API_URL=http://localhost:3001
VITE_ADMIN_API_URL=https://admin.mysys.shop
VITE_PORTAL_URL=https://mysys.shop
VITE_AUTH_URL=https://mysys.shop

# Game identification
VITE_GAME_CODE=CHAMP

# OAuth 2.0 + PKCE
VITE_OAUTH_CLIENT_ID=CHAMP
VITE_OAUTH_AUTHORIZE_URL=https://mysys.shop/oauth/authorize
VITE_OAUTH_REDIRECT_URI=http://localhost:5173/auth/callback

# Reverb WebSocket (opcional - para logout sync)
VITE_REVERB_APP_KEY=
VITE_REVERB_HOST=admin.mysys.shop
VITE_REVERB_PORT=8080
VITE_REVERB_FORCE_TLS=true
